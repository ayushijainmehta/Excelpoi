import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileOutputStream;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.ObjectOutputStream;
import java.io.OutputStreamWriter;
import java.io.Writer;
import java.util.Iterator;
import java.util.Map;
import java.util.Properties;
import java.util.Set;

public class emailread {
	public static void main(String[] args)throws Exception{  
		FileReader reader=new FileReader("C:\\Users\\765352\\workspace\\Assignment3\\src\\email.properties");  
 FileOutputStream f=new FileOutputStream("./email.txt");
	   ObjectOutputStream object = new ObjectOutputStream(f);
	   String emails="";
	   Properties p=new Properties();  
	    p.load(reader);  
	    Set set=p.entrySet();  
	    Iterator itr=set.iterator();  
	    while(itr.hasNext()){  
	    Map.Entry entry=(Map.Entry)itr.next();  
	  
	  emails=emails+entry.getValue();
	  System.out.print(emails);
	
	  }  
	   String[] separateEmail=emails.split(",");
	   for(int i=0;i<separateEmail.length;i++)
		  { 
			  separateEmail[i]=i+1+". "+separateEmail[i];
		
		  }
	    for(int i=0;i<separateEmail.length;i++)
		  { 
			  
			  object.writeObject(separateEmail[i]);
		
		  }
	    

}
}
